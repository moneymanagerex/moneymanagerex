# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = unset
insert_final_newline = true
trim_trailing_whitespace = true

[*.{vcproj,vcxproj}{,.user,.filters}]
indent_size = 2
end_of_line = crlf

[{Makefile,*.{mak,make}}]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.{md,MD}]
trim_trailing_whitespace = false
