  <script>
    function toggleTable(id) {
        var elem = document.getElementById(id)
        var label = document.getElementById(id + "_label")
        var hide = elem.style.display == "none"
        if (hide) {
            elem.style.display = ""
            label.innerHTML = "[-]"
        }
        else {
            elem.style.display = "none"
            label.innerHTML = "[+]"
        }
    }
  </script>
