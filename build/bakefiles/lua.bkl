<makefile>

    <lib id="lua" template="compiler_common">

        <cxx-exceptions>on</cxx-exceptions>
        <cxx-rtti>on</cxx-rtti>

        <!-- paths relative to trunk/mmex -->

        <set var="SRC">lib/lua/src/</set>

        <headers>$(fileList(SRC + '/*.h'))</headers>
        <sources>$(fileList(SRC + '/*.c'))</sources>

    </lib>

</makefile>
